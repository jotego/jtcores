[all]
CORENAME=JTS16
GAMETOP=jts16_game_sdram

JTFRAME_WIDTH=320
JTFRAME_HEIGHT=224
JTFRAME_COLORW=5
JTFRAME_PXLCLK=6
JTFRAME_VERTICAL
JTFRAME_ROTATE

JTFRAME_CREDITS
JTFRAME_CREDITS_PAGES=3
JTFRAME_CREDITS_HSTART=48
JTFRAME_BUTTONS=4
JTFRAME_4PLAYERS
JTFRAME_ANALOG
JTFRAME_ANALOG_DUAL

# Debug
JTFRAME_STATUS

# For audio section
JTFRAME_CLK24
JTFRAME_PLL=jtframe_pll6293

# instance names
JTS16_MAIN=jts16_main
JTS16_SND=jts16_snd

# ROM file layout
# BA0, main CPU ROM
# BA1, sound CPU and PCM
# BA3, sprites
JTFRAME_HEADER=32
JTFRAME_BA1_START    =0x040000
PCM_START    =0x048000
JTFRAME_BA2_START    =0x088000
JTFRAME_BA3_START    =0x100000
MCU_START    =0x180000
MAINKEY_START=0x182000
SNDKEY_START =0
N7751_START  =0x184000
FD1089_START =0x186000

# Make it the same as MCU_START
JTFRAME_PROM_START=0x180000

# Game codes
GAME_HWCHAMP =0x01
GAME_QUARTET =0x04
GAME_PASSSHT =0x10
GAME_SDIBL   =0x12
GAME_PASSSHT2=0x13
GAME_DUNKSHOT=0x14
GAME_EXCTLEAG=0x15
GAME_BULLET  =0x16
GAME_PASSSHT3=0x18
GAME_SDI     =0x19
GAME_AFIGHTAN=0x1D
GAME_FANTZN2X=0x43

# 64kB VRAM + 16-256 RAM
VRAMW=16

# OSD options
JTFRAME_OSD_VOL
JTFRAME_OSD_SND_EN
JTFRAME_OSD_TEST

[mister]
JTFRAME_OSD_NOLOAD
#Do not enable JTFRAME_CHEAT unless a proper cheat.hex file exists
#or it will break the core
#JTFRAME_CHEAT
JTFRAME_NOHQ2X

# Needed for Action Fighter
JTFRAME_ROTCCW

# Debug - only mister
# JTFRAME_IOCTL_RD=43008

[mist]
JTFRAME_NOSTA