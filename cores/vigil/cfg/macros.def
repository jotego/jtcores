[*]
CORENAME=JTVIGIL
JTFRAME_BUTTONS=2

JTFRAME_WIDTH=256
JTFRAME_HEIGHT=256
JTFRAME_COLORW=5
JTFRAME_DEBUG_VPOS = 6

# JTFRAME_STATUS
JTFRAME_CREDITS
JTFRAME_PLL=jtframe_pll6144

# Clocking
JTFRAME_PXLCLK=6

# ROM file layout
# BA0, main CPU ROM
# BA1, sound CPU and PCM
# BA3, sprites
JTFRAME_BA1_START    =0x20000
PCM_START    =0x30000
JTFRAME_BA2_START    =0x40000
SCR2_START   =0x80000
JTFRAME_BA3_START    =0xc0000

# Scene saving
debug -JTFRAME_CREDITS
debug JTFRAME_IOCTL_RD=4096
debug JTFRAME_IOCTL_RD+=2048
debug JTFRAME_IOCTL_RD+=4